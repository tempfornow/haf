# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET		/		controllers.UserController.listUsers()
GET     /:username		controllers.UserController.retrieve(username:String)
POST    /			controllers.UserController.create()
PUT		/		controllers.UserController.update()
DELETE	/:username		controllers.UserController.delete(username:String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
